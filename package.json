{
  "name": "realty",
  "version": "1.0.0",
  "description": "Realty monorepo",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "commit": "cz",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "if [ -z \"$npm_config_production\" ]; then husky install",
    "back:dev": "cd packages/backend && npm run start:dev",
    "front:dev": "cd packages/frontend && npm start",
    "start": "npm-run-all --parallel back:dev front:dev"
  },
  "keywords": [
    "realty",
    "typescript",
    "Nest.js",
    "React.js",
    "prisma"
  ],
  "author": "RÃ³mulo Corona",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
